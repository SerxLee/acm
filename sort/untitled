const int N = 101000;
const int INF=0x3f3f3f3f;
const int MOD=95041567,STA=8000010;
const double EPS=1e-8;
const double OO=1e15;
const int dx[4]={-1,0,1,0};
const int dy[4]={0,1,0,-1};
template<class T> inline T Min(T a,T b){return a<b?a:b;}
template<class T> inline T Max(T a,T b){return a>b?a:b;}

struct node{
    int pi, vi;
}a[105];

void quicksort(node a[], int l, int k){
    if (l < k) {
        int i = l , j = k;
        node tmp = a[l];
        while (i < j) {
            while (i < j && a[j].pi <= tmp.pi) {
                j--;
            }
            if (i<j) {
                a[i++]= a[j];
            }
            
            while (i<j && a[i].pi >= tmp.pi) {
                i++;
            }
            if (i<j) {
                a[j--] = a[i];
            }
        }
        a[i] = tmp;
        quicksort(a, l, i-1);
        quicksort(a, i+1, k);
    }
}

int main(){
    int v, n;
    while (cin >> v >> n) {
        int sum = 0;
        for (int i = 0; i < n; i++) {
            cin >> a[i].pi >> a[i].vi;
        }
        quicksort(a, 0, n - 1);
        for (int i = 0 ; i < n; i++) {
            while (a[i].vi > 0&& v > 0) {
                sum += a[i].pi;
                v--;
                a[i].vi--;
            }
        }
        printf("%d\n", sum);
    }
    return 0;
}